<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
	<longdescription>An advanced and secure webserver for Unix.</longdescription>
	<use>
		<flag name="cache">Enable caching content</flag>
		<flag name="monitor">Use <pkg>www-apps/hiawatha-monitor</pkg></flag>
		<flag name="ssl">Enable TLS support via	<pkg>net-libs/mbedtls</pkg></flag>
		<flag name="tomahawk">Enable Tomahawk control server</flag>
		<flag name="xslt">Enable XSLT support
		(This is also needed for directory listings.)</flag>
		<flag name="urltoolkit">Enable the URL rewrite toolkit</flag>
		<flag name="rproxy">Enable reverse proxy support</flag>
	</use>
	<upstream>
		<remote-id type="github">hsleisink/hiawatha</remote-id>
		<changelog>https://www.hiawatha-webserver.org/changelog</changelog>
		<doc>https://www.hiawatha-webserver.org/support</doc>
	</upstream>
</pkgmetadata>
